<!---------------------Drives----------------------->
    <h1>Upcoming Internship Drives</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Company</th>
            <th scope="col">Position</th>
            <th scope="col">start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Appl. Deadline</th>
          </tr>
        </thead>
        <tbody>
            <% clist.forEach(companydata => { %>
                <tr  class="<%= new Date(companydata.edate) > new Date() ? 'active-row' : 'expired-row' %>">
                    <th scope="row"><%= companydata.cname %></th>
                    <td><%= companydata.position %></td>
                    <td><%= companydata.sdate %></td>
                    <td><%= companydata.edate %></td>
                    <td><%= companydata.adate %></td>
                </tr>
            <% }) %>
        </tbody>
        
      </table>

